include ../template

script. 
    $(function () {
        var socket = io();
        socket.on('db restore', (msg) => {
            $('#stdout').append(msg);
        });
    });

    $(document).ready(function () {
       
        $(function() {
            $("#theForm").ajaxForm();
        });

        $('#limpar-texto').click(function() {
            $('#stdout').html("Limpo!")
        });
    });


.container.is-fluid
    .notification
        h1.title Restaurar banco de dados via link
        form#theForm(action="/restaurar-link" method="POST")
            .field.is-horizontal
                .field-label.is-normal
                    label.label(for="nome-banco") Nome do banco:
                .field-body
                    .field
                        .control
                            input.input(type='text', placeholder='Informe o nome do banco' id='nome-banco' name='nome-banco')
            .field.is-horizontal
                .field-label.is-normal
                    label.label(for="arquivo") Link do backup:
                .field-body
                    .field
                        .control
                            input.input(type='text', placeholder='Informe o link' id="link" name='link')
                    
            .has-text-centered
                input.button.is-hcentered.is-info(type="submit" value="Restaurar")
                a.button.is-warning(href="/") Voltar
        br 
        .box
            .feedback#stdout ...
        br
        a#limpar-texto.button.is-hcentered Limpar